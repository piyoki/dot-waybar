    "return-type": "json",
    "max-length": 64,
    "tooltip": true,
    // "exec": "playerctl metadata --format='{{title}}, {{artist}}'",
    "exec": "playerctl -a metadata --format '{\"text\": \"{{title}}, {{artist}}\", \"tooltip\": \"{{playerName}} | {{title}}, {{album}}, {{artist}} \", \"alt\": \"{{status}}\", \"class\": \"{{status}}\"}' -F",
    "on-click": "playerctl play-pause",
