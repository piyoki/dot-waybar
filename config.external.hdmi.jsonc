{
  "output": "HDMI-A-1",
  "layer": "top",
  "position": "top",
  "spacing": 5,
  "height": 34,
  "margin-top": 10,
  "margin-bottom": 0,
  "margin-left": 20,
  "margin-right": 20,
  "modules-left": ["custom/nixlogo", "hyprland/workspaces", "cpu", "memory"],
  "modules-center": ["clock"],
  "modules-right": [
    "custom/music",
    "tray",
    "network",
    "bluetooth",
    "pulseaudio",
    "backlight",
    "battery",
    "custom/power"
